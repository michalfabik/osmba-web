    <script src='http://cdn.rawgit.com/mapbox/togeojson/v0.8.1/togeojson.js'></script>

    <!-- js-cookie -->
    <script src='http://cdn.rawgit.com/js-cookie/js-cookie/v2.1.0/src/js.cookie.js'></script>
    
    
    <script src="/theme/js/lib-component-querystring.js"></script>
    <script src="/theme/js/lib-osm.js"></script>
    <script src="/theme/js/TileLayer.GeoJSON.js"></script>
    
    <!-- ------------ /vendor ------------ -->
    
    <!-- ------------ app ------------ -->
    <link href="/theme/css/map-style.css?2" rel="stylesheet">
    
    <script src="/theme/js/layers.js?2"></script>
    <script src="/theme/js/controls.js?2"></script>
    <script src="/theme/js/guideposts.js?2"></script>
    <script src="/theme/js/active-layer.js?2"></script>
    <script src="/theme/js/osmcz.js?2"></script>
    <!-- ------------ /app ------------ -->

    <script src="/theme/js/jquery.nette.custom.js?2"></script>

